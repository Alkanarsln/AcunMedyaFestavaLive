@model List<AcunMedyaFestavaLive.Entities.Ticket>
@{
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bilet Bilgileri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Satışta ki Biletlerin Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Bilet Bilgisi ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Bilet Türü</th>
                                    <th>Bilet Fiyatı</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Detaylar</th>
                                    <th>Aktif Yap</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@item.TicketID</td>
                                        <td>@item.Title</td>
                                        <td>@item.Price</td>
                                        <td><a href="/Admin/Ticket/DeleteTicket/@item.TicketID" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/Ticket/UpdateTicket/@item.TicketID" class="btn btn-success">Güncelle</a></td>
                                        <td><a href="/Admin/Ticket/TicketDetail/@item.TicketID" class="btn btn-info">Detaylar</a></td>
                                        <td><a href="/Admin/Ticket/MakeActive/@item.TicketID" class="btn btn-outline-secondary">Aktif Yap</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>